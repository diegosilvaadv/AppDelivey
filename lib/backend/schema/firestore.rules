rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    match /users/{document} {
      allow create: if request.auth.uid == document;
      allow read: if true;
      allow write: if request.auth.uid == document;
      allow delete: if false;
    }

    match /PizzaGrande/{document} {
      allow create: if true;
      allow read: if true;
      allow write: if false;
      allow delete: if false;
    }

    match /pizzabroto/{document} {
      allow create: if true;
      allow read: if true;
      allow write: if false;
      allow delete: if false;
    }

    match /Sabores/{document} {
      allow create: if request.auth != null;
      allow read: if request.auth != null;
      allow write: if request.auth != null;
      allow delete: if false;
    }

    match /Bordas/{document} {
      allow create: if request.auth != null;
      allow read: if request.auth != null;
      allow write: if request.auth != null;
      allow delete: if request.auth != null;
    }

    match /user_card/{document} {
      allow create: if request.resource.data.user == /databases/$(database)/documents/users/$(request.auth.uid);
      allow read: if resource.data.user == /databases/$(database)/documents/users/$(request.auth.uid);
      allow write: if resource.data.user == /databases/$(database)/documents/users/$(request.auth.uid);
      allow delete: if resource.data.user == /databases/$(database)/documents/users/$(request.auth.uid);
    }

    match /user_card/{parent}/soma/{document} {
      allow create: if request.auth.uid == get(/databases/$(database)/documents/user_card/$(parent)).data.preco;
      allow read: if request.auth.uid == get(/databases/$(database)/documents/user_card/$(parent)).data.preco;
      allow write: if request.auth.uid == get(/databases/$(database)/documents/user_card/$(parent)).data.preco;
      allow delete: if request.auth.uid == get(/databases/$(database)/documents/user_card/$(parent)).data.preco;
    }
  }
}
